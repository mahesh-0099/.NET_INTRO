
@{    
    ViewBag.Title = "Accueil";
    List<My_T_Shirt.Models.Produit> lstproduits = new List<My_T_Shirt.Models.Produit>();
    lstproduits = (List<My_T_Shirt.Models.Produit>)ViewData["apercuRapide"];
}
<link rel="stylesheet"
      href="~/Content/Accueil.css" />

<div id="carouselExampleFade" class="carousel slide carousel-fade" data-ride="carousel">
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="~/Images/bg-1.png" class="d-block w-100" alt="BG1">
            <div class="carousel-iv">
                <p>
                    <b>When you don’t dress like everyone else, you don’t have to think like everyone else</b>
                </p>
                <a class="btn btn-dark vv_btn" href="@Url.Action("", "Produits")">See more</a>
                <a class="btn btn-dark btn-sm resp_btn" href="@Url.Action("", "Produits")">See more</a>
            </div>

        </div>

        <div class="carousel-item">
            <img src="~/Images/bg-2.png" class="d-block w-100" alt="BG2">
            <div class="carousel-iv">
                <p>
                    So, the wait is over! Our much awaited "Easy Shop 
                    exclusive sale" has just arrived. Head over
                    for plenty of designs and shop your favourite
                    picks without stepping out of your house. Shop now
                </p>
                <a class="btn btn-secondary vv_btn" href="@Url.Action("", "Produits")">See more</a>
                <a class="btn btn-secondary btn-sm resp_btn" href="@Url.Action("", "Produits")">See more</a>

            </div>

        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleFade" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleFade" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div class="container">

    <div class="row mt-5">

        <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12">
            <div class="card mb-3" style="max-width: 540px;">
                <div class="row no-gutters">
                    <div class="col-md-4">
                        <a href="/Produits">
                            <img src="~/Images/acc_cd1.png" class="w-100">
                        </a>
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <p class="card-text">
                                <center>
                                <br>
                                <br>
                                <b>Head over for</b>
                                <br>
                                <b>Mens Category</b></center>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12">

            <div class="card mb-3" style="max-width: 540px;">
                <div class="row no-gutters">
                    <div class="col-md-4">
                        <a href="/Produits">
                            <img src="~/Images/acc_cd2.png" class="w-100">
                        </a>
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <p class="card-text">
                                <br>
                                <br>
                               <center><b>Head over for</b>
                                <br>
                                <b>Womens Category</b></center>
                            </p>
                        </div>
                    </div>
                </div>
            </div>

        </div>


    </div>


    @if (ViewBag.Exception != "")
    {
        <div class="alert alert-danger mt-5" role="alert">
            <p>@ViewBag.Exception</p>
        </div>
    }

    <!-- Apercu rapide -->
    <div class="mb-5">
        
        <div class="justify-content-center d-flex mt-5 mb-5">
            <h2 class="m-title">QUICK OVERVIEW</h2>
        </div>

        <div id="apercu_rapide" class="row">
            @{
                foreach (var produit in lstproduits)
                {
                    <div class="col-xl-3 col-lg-4 col-md-6 col-sm-12 mb-5">
                        <div class="m-produit">
                            <div class="m-produit-image-box">
                                @if (My_T_Shirt.Models.Solde.inSolde(produit.IdProduit))
                                {
                                    <span class="badge badge-danger">Remaining</span>
                                }
                                <img src="@produit.Image" class="img-thumbnail" />
                                <a class="btn btn-primary w-75" href="/DetailsProduit?idProduit=@produit.IdProduit">Details</a>
                            </div>
                            <div class="m-produit-info mt-1">
                                <h4 class="mb-0">@produit.Nom</h4>
                                <div class="justify-content-between d-flex">
                                    <small style="color:yellow">

                                        @if (My_T_Shirt.Models.Review.getRating(produit.IdProduit) == 0)
                                        {
                                            <i class="far fa-star"></i><i class="far fa-star"></i><i class="far fa-star"></i><i class="far fa-star"></i><i class="far fa-star"></i>
                                        }
                                        else if (My_T_Shirt.Models.Review.getRating(produit.IdProduit) == 1)
                                        {
                                            <i class="far fa-star"></i><i class="far fa-star"></i><i class="far fa-star"></i><i class="far fa-star"></i>
                                        }
                                        else if (My_T_Shirt.Models.Review.getRating(produit.IdProduit) == 2)
                                        {
                                            <i class="fas fa-star"></i><i class="fas fa-star"></i><i class="far fa-star"></i><i class="far fa-star"></i><i class="far fa-star"></i>
                                        }
                                        else if (My_T_Shirt.Models.Review.getRating(produit.IdProduit) == 3)
                                        {
                                            <i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star"></i><i class="far fa-star"></i><i class="far fa-star"></i>
                                        }
                                        else if (My_T_Shirt.Models.Review.getRating(produit.IdProduit) == 4)
                                        {
                                            <i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star"></i><i class="far fa-star"></i>
                                        }
                                        else if (My_T_Shirt.Models.Review.getRating(produit.IdProduit) == 5)
                                        {
                                            <i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star"></i>
                                        }

                                    </small>
                                    @if (!My_T_Shirt.Models.Solde.inSolde(produit.IdProduit))
                                    {
                                        <small>@produit.Prix Rs</small>
                                    }
                                    else
                                    {
                                        <div>
                                            <small style="text-decoration:line-through">@produit.Prix Rs</small>
                                            <small>@My_T_Shirt.Models.Solde.getPrixSolde(produit.IdProduit) Rs</small>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
    </div>



    <div class="row mt-5">

        <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12">
            <div class="card mb-3" style="max-width: 540px;">
                <div class="row no-gutters">
                    <div class="col-md-4">
                        <a href="/Produits">
                            <img src="~/Images/acc_cd4.png" class="w-100">
                        </a>
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <p class="card-text">
                                <center>
                                <br>
                                <br>
                                The delight will last longer, the offer won't!</center>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12">

            <div class="card mb-3" style="max-width: 540px;">
                <div class="row no-gutters">
                    <div class="col-md-4">
                        <a href="/Produits">
                            <img src="~/Images/acc_cd3.png" class="w-100">
                        </a>
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <p class="card-text">
                                <br>
                                <br>
                                <center>
                                Now Swag comes with an awesome Sale!</center>
                            </p>
                        </div>
                    </div>
                </div>
            </div>

        </div>


    </div>


    <!--Solde-->
    <div class="mb-5">
        <div class="justify-content-center d-flex mt-5 mb-5">
            <h2 class="m-title">Products on sale</h2>
        </div>
        <div>
            @{
                Html.RenderAction("RenderSoldeProduits", "Produits");
            }
        </div>
    </div>
</div>

