q@model My_T_Shirt.Models.Utilisateur

@{
    ViewBag.Title = "AjouterAdmin";
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}


<style>
    label.error {
        color: var(--danger);
        margin-top: 3px;
    }
</style>
<div class="container">
    <div class="justify-content-center d-flex mt-4">
        <div class="card" style="width:35rem;">
            <div class="card-body">
                <div class="justify-content-center d-flex">
                    <h5>Add an admin</h5>
                </div>
                @if (ViewBag.error != "")
                {
                    <div class="alert alert-danger">
                        <h5>@ViewBag.error</h5>
                    </div>
                }
                @using (Html.BeginForm("AjouterAdmin", "Admin", FormMethod.Post, new { id = "frmAjouterAdmin" }))
                {
                    @Html.AntiForgeryToken()
                    <div class="form-group">
                        <label>First Name</label>
                        @Html.TextBoxFor(m => m.Nom, new { @class = "form-control", @autocomplete = "off" })
                    </div>
                    <div class="form-group">
                        <label>Last Name </label>
                        @Html.TextBoxFor(m => m.Prenom, new { @class = "form-control", @autocomplete = "off" })

                    </div>
                    <div class="form-group">
                        <label>Email </label>
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @autocomplete = "off" })

                    </div>
                    <div class="form-group">
                        <label> Password </label>
                        @Html.TextBoxFor(m => m.MotDePasse, new { @class = "form-control", @type = "password" })

                    </div>
                    <div class="form-group">
                        <label>Password Confirmation</label>
                        <input type="password" class="form-control" value="" name="MdpConfirmation" />
                    </div>
                    <button class="btn btn-primary btn-block">Add</button>
                  
                }
            </div>
        </div>
    </div>
</div>

@section scripts
{
    <script type="text/javascript">
        $(document).ready(function () {
            $('#frmAjouterAdmin').validate({
                rules: {
                    Nom: {
                        required: true,
                    },
                    Prenom: {
                        required: true,
                    },
                    Email: {
                        required: true,
                        email: true,
                    },
                    MotDePasse: {
                        required: true,
                        minlength: 5,
                    },
                    MdpConfirmation: {
                        required: true,
                        equalTo: "Passwordddd"
                    }
                },
                messages: {
                    Nom: {
                        required: "First Name Required"
                    },
                    Prenom: {
                        required: "Last Name Required"
                    },
                    Email: {
                        required: "Email Required",
                        email: "Email invalid !"
                    },
                    MotDePasse: {
                        required: "Password Required",
                        minlength: "Weak Password"
                    },
                    MdpConfirmation: {
                        required: "Re-enter your password",
                        equalTo: "Password and confirm password must be the same"
                    }

                }
            });

        });
    </script>
}
